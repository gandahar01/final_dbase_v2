<div class="page-header">
  <h3>Food #<%= @food.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Food name</dt>
      <dd><%= @food.food_name %></dd>

      <dt>Food description</dt>
      <dd><%= @food.food_description %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/foods" class="btn btn-primary">
        Back
      </a>
      <a href="/foods/<%= @food.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_food/<%= @food.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Food has many foods_nutritions -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Foods Nutritions
      </li>

      <% @food.foods_nutritions.each do |foods_nutrition| %>
        <li class="list-group-item">
          <a href="/foods_nutritions/<%= foods_nutrition.id %>">
            <%= foods_nutrition.foods_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/foods_nutritions/<%= foods_nutrition.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/foods_nutritions/<%= foods_nutrition.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_foods_nutrition/<%= foods_nutrition.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_foods_nutrition" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for foods_id -->
      <div class="form-group">
        <label for="foods_id" class="control-label">
          Foods
        </label>

        <%= select_tag(:foods_id, options_from_collection_for_select(Food.all, :id, :food_name), :class => "form-control") %>
      </div>

      <!-- Label and input for foodscatagory_id -->
      <div class="form-group">
        <label for="foodscatagory_id" class="control-label">
          Foodscatagory
        </label>

        <%= select_tag(:foodscatagory_id, options_from_collection_for_select(FoodsCatagory.all, :id, :created_at), :class => "form-control") %>
      </div>

      <!-- Label and input for foods_calories -->
      <div class="form-group">
        <label for="foods_calories" class="control-label">
          Foods calories
        </label>

        <input type="text" id="foods_calories" name="foods_calories" placeholder="Foods calories" class="form-control" value="">
      </div>

      <!-- Label and input for foods_carbs -->
      <div class="form-group">
        <label for="foods_carbs" class="control-label">
          Foods carbs
        </label>

        <input type="text" id="foods_carbs" name="foods_carbs" placeholder="Foods carbs" class="form-control" value="">
      </div>

      <!-- Label and input for foods_fat -->
      <div class="form-group">
        <label for="foods_fat" class="control-label">
          Foods fat
        </label>

        <input type="text" id="foods_fat" name="foods_fat" placeholder="Foods fat" class="form-control" value="">
      </div>

      <!-- Label and input for foods_sugar -->
      <div class="form-group">
        <label for="foods_sugar" class="control-label">
          Foods sugar
        </label>

        <input type="text" id="foods_sugar" name="foods_sugar" placeholder="Foods sugar" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Foods Nutrition
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Food has many favorite_foods -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Favorite Foods
      </li>

      <% @food.favorite_foods.each do |favorite_food| %>
        <li class="list-group-item">
          <a href="/favorite_foods/<%= favorite_food.id %>">
            <%= favorite_food.favoritefood_name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/favorite_foods/<%= favorite_food.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/favorite_foods/<%= favorite_food.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_favorite_food/<%= favorite_food.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_favorite_food" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for favoritefood_name -->
      <div class="form-group">
        <label for="favoritefood_name" class="control-label">
          Favoritefood name
        </label>

        <input type="text" id="favoritefood_name" name="favoritefood_name" placeholder="Favoritefood name" class="form-control" value="">
      </div>

      <!-- Label and input for foods_id -->
      <div class="form-group">
        <label for="foods_id" class="control-label">
          Foods
        </label>

        <%= select_tag(:foods_id, options_from_collection_for_select(Food.all, :id, :food_name), :class => "form-control") %>
      </div>

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <button class="btn btn-block btn-success">
        Create Favorite Food
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
